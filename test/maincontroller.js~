app.controller("MainController", function($scope,$http)
{
	$scope.num_results=0;
	$scope.results=[];
	$scope.namespaces=[];
	$scope.images=[];
	$http({method: 'GET', url: 'http://192.168.1.16/v1/search'}).success(function(data)
	{
		$scope.num_results=data.num_results;
		$scope.results=data.results;
		angular.forEach($scope.results,function(result)
		{
			$scope.namespaces.push(result.name.split('/')[0]);
			$scope.images.push(result.name.split('/')[1]);
		});
	}).error(function(data){$scope.num_results=-1;});
});
